<UserControl
    x:Class="HelperUWP.Controls.UI.AdaptiveImageControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HelperUWP.Controls.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="300">

    <Grid x:Name="GridCons" Width="100" Height="100"  HorizontalAlignment="Left" Margin="1,1,0,0" >
        <Image x:Name="MyImage" Stretch="Fill"></Image>
        <TextBlock Visibility="Collapsed" x:Name="TotalItem" Text="3"></TextBlock>
    </Grid>
</UserControl>
