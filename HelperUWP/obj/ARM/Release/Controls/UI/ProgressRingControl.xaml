<UserControl
    x:Class="HelperUWP.Controls.UI.ProgressRingControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HelperUWP.Controls.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid   Background="Transparent">
        <ProgressRing x:ConnectionId='1' x:Name="ProgressRingName" Foreground="{ThemeResource SystemControlBackgroundAccentBrush}" IsActive="True"  Height="100" Width="100"  VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>
</UserControl>

